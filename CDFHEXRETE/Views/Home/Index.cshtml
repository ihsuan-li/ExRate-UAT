@model HomeModel
@{
    ViewData["Title"] = "匯率查詢";
}
@section Scripts{
    <script type="text/javascript" src="~/js/home.js?ver=@DateTime.Now.ToString("yyyyMMddHHmmss")"></script>
}

<div class="contaniner text-lg">
    <form id="search-form" style="display: flex" class="justify-content-center">
        <div>
            <input id="dateStart" name="dateStart" type="date" class="form-control" placeholder="yyyy/mm/dd" onchange="setDate()">
        </div>
        <div>~</div>
        <div>
            <input id="dateEnd" name="dateEnd" type="date" class="form-control" placeholder="yyyy/mm/dd" onchange="setDate()">
        </div>
        <div>
            <button id="search-btn" type="button" class="btn btn-primary" style="margin-left: 15px;" onclick="getSearchForm(event)"><i class="fa fa-search"></i>查詢</button>
        </div>
    </form>
</div>
<div class="row" style="overflow-y:auto; margin-top: 15px;">
    <table id="table-data" class="table table-striped table-sm">
        <thead>
            <tr class="thead-dark">
                <th scope="col">公告日期(星期)</th>
            </tr>
        </thead>
        <tbody id="row-data" onclick="tableBtnDelegation(event)">
        </tbody>
    </table>
</div>
